pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                url: 'https://github.com/Su12mit/Jenkins-web-repo.git'
            }
        }

        stage('Deploy index.html to Apache') {
            steps {
                sh '''
                cp index.html /var/www/html/
                '''
            }
        }
    }

    post {
        success {
            echo "✅ index.html deployed successfully!"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
